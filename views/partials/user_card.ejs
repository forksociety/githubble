<div class="card">
    <div class="image">
        <img src="<%= u.avatar %>"/>
    </div>
    <div class="content">
        <a href="<%= u.link.github %>" target="_blank"><i class="right floated github icon"></i></a>
        <a href="mailto:<%= u.link.mail %>" target="_blank"><i class="right floated mail outline icon"></i></a>
        <a href="<%= u.link.site %>" target="_blank"><i class="right floated linkify icon"></i></a>
        <div class="header"><%= u.name %></div>
        <div class="meta">
            <a href="<%= u.link.github %>" target="_blank"><%= u.username %></a>
        </div>
        <div class="description">
            <i class="users icon"></i> <%= u.org %><br/>
            <i class="add user icon"></i> <%= u.joined %>
        </div>
    </div>
    <div class="extra content">
        <span class="right floated">
            <i class="world icon"></i> <%= u.located %>
        </span>
    </div>
</div>
